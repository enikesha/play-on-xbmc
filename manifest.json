{
    "manifest_version": 2,

    "name": "Play on XBMC",
    "description": "Extension to add buttons to play page video or music on XBMC-running network device",
    "version": "0.1",

    "permissions": [
      "webNavigation",
      "http://*/*"
    ],

    "options_page": "options.html",
    "page_action": {
        "default_icon": "xbmc_19.png",
        "default_title": "Play on XBMC"
    },
    "background": {
      "scripts": ["common.js", "background.js"],
      "persistent": false
    }
}